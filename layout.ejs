<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Registry</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
</head>

<body>
    <div class="container mt-5">
        <!-- Page Header -->
        <h2 class="text-center"><%= formTitle %></h2>

        <!-- Form for adding a new student -->
        <form id="studentForm" action="/add-student" method="POST" class="mb-4">
            <div class="form-group">
                <label for="name">Student Name:</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Enter student name" required>
            </div>
            <button type="submit" class="btn btn-primary"><%= btntxt %></button>
        </form>

        <!-- Table to display the list of students -->
        <h3>Registered Students Details</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% if (students.length === 0) { %>
                    <tr>
                        <td colspan="3" class="text-center">No students registered yet.</td>
                    </tr>
                <% } else { %>
                    <% students.forEach(student => { %>
                        <tr>
                            <td><%= student.id %></td>
                            <td><%= student.name %></td>
                            <td>
                                <!-- Delete button -->
                                <form action="/delete-student" method="POST" style="display: inline;">
                                    <input type="hidden" name="id" value="<%= student.id %>">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                <% } %>
            </tbody>
        </table>
    </div>
</body>

</html>
