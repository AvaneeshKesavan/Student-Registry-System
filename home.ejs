<!-- Displaying the form title dynamically using EJS (Embedded JavaScript) -->
<h2><%= formTitle %></h2>

<!-- Form element with an ID for targeting it in JavaScript, POST method used to send data to "/add-name" endpoint -->
<form id="nameForm" action="/add-name" method="POST">
    
    <!-- Form group for name input field -->
    <div class="form-group">
        <!-- Label for the name input, associated with the input by 'for' attribute -->
        <label for="name">Name:</label>
        
        <!-- Input field for the name, 'required' ensures the field can't be left empty, and form-control class is for styling with Bootstrap -->
        <input type="text" class="form-control" id="name" name="name" required>
    </div>
    
    <!-- Submit button with dynamic text from EJS (using 'btntxt' variable) -->
    <button type="submit" class="btn btn-primary"><%= btntxt %></button>
</form>

<!-- Placeholder div to display response messages after form submission, with Bootstrap margin-top class for spacing -->
<div id="responseMessage" class="mt-3"></div>
